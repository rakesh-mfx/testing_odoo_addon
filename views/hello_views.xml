<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hello_world" model="ir.actions.act_window">
        <field name="name">Hello World</field>
        <field name="res_model">hello.world</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Hello World record
            </p>
        </field>
    </record>

    <menuitem id="menu_hello_root" name="Hello Test" sequence="10"/>
    <menuitem id="menu_hello_world" name="Hello World" parent="menu_hello_root" action="action_hello_world" sequence="10"/>

    <record id="view_hello_world_tree" model="ir.ui.view">
        <field name="name">hello.world.tree</field>
        <field name="model">hello.world</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hello_world_form" model="ir.ui.view">
        <field name="name">hello.world.form</field>
        <field name="model">hello.world</field>
        <field name="arch" type="xml">
            <form string="Hello World">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
